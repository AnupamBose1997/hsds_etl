pipeline {
    agent any

    environment {
        ENV_FILE = credentials('hsds-data') // Use Jenkins credentials to securely store the database for PostgresSQL
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install poetry'
                sh 'poetry install'
            }
        }
        stage('Build') {
            steps {
                script {
                    sh "poetry run python highstreets/hsdsprocess/bt_hex.py --${ENV_FILE}"
                }
            }
        }
    }
}
