pipeline {
    agent any

    environment {
        ENV_FILE = credentials('hsds-data') // Use Jenkins credentials to securely store the database for PostgresSQL
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install poetry'
                sh 'poetry install'
            }
        }

        stage('Build') {
            steps {
                withCredentials([
                    string(credentialsId: 'hsds-data', variable: 'PG_DATABASE'),
                    string(credentialsId: 'hsds-data', variable: 'PG_USER'),
                    string(credentialsId: 'hsds-data', variable: 'PG_PASSWORD'),
                    string(credentialsId: 'hsds-data', variable: 'PG_HOST'),
                    string(credentialsId: 'hsds-data', variable: 'PG_PORT')
                ]) {
                    script {
                        sh 'poetry run python highstreets/hsdsprocess/hsds_bid_hs_tc_lookup.py'
                    }
                }
            }
        }
    }
}
