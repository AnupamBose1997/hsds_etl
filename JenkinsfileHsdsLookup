pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install poetry'
                sh 'poetry install'
            }
        }

        stage('Build') {
            steps {
                withCredentials([
                    [
                        $class: 'org.jenkinsci.plugins.plaincredentials.StringCredentials',
                        credentialsId: 'hsds-data',
                        variable: 'PG_DATABASE'
                    ],
                    [
                        $class: 'org.jenkinsci.plugins.plaincredentials.StringCredentials',
                        credentialsId: 'hsds-data',
                        variable: 'PG_USER'
                    ],
                    [
                        $class: 'org.jenkinsci.plugins.plaincredentials.StringCredentials',
                        credentialsId: 'hsds-data',
                        variable: 'PG_PASSWORD'
                    ],
                    [
                        $class: 'org.jenkinsci.plugins.plaincredentials.StringCredentials',
                        credentialsId: 'hsds-data',
                        variable: 'PG_HOST'
                    ],
                    [
                        $class: 'org.jenkinsci.plugins.plaincredentials.StringCredentials',
                        credentialsId: 'hsds-data',
                        variable: 'PG_PORT'
                    ]
                ]) {
                    script {
                        sh 'poetry run python highstreets/hsdsprocess/hsds_bid_hs_tc_lookup.py'
                    }
                }
            }
        }
    }
}
