pipeline {
    agent any

    environment {
        ENV_FILE = credentials('hsds-data') // Use Jenkins credentials to securely store the database for PostgresSQL
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install poetry'
                sh 'poetry install'
            }
        }
        stage('Build') {
            steps {
                script {
                    withEnv(["PG_DATABASE=${ENV_FILE.PG_DATABASE}", "PG_USER=${ENV_FILE.PG_USER}", "PG_PASSWORD=${ENV_FILE.PG_PASSWORD}", "PG_HOST=${ENV_FILE.PG_HOST}", "PG_PORT=${ENV_FILE.PG_PORT}"]) {
                        sh 'poetry run python highstreets/hsdsprocess/hsds_bid_hs_tc_lookup.py'
                    }
                }
            }
        }
    }
}
